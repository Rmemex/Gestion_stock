{% extends 'base.html.twig' %}

{% block title %}Gestion de vente | Mouvement{% endblock %}

{% block stylesheets %}<link rel="stylesheet" href="{{ asset('assets/css/affiche.css') }}">{% endblock %}

{% block body %}
    <h3>Mouvement</h3>
    <a href="{{ path('mouvement_index') }}" class="btn btn-secondary" style="width:115px; height: 35px; color:white; text-decoration: none; font-size:12px;"><i class="fa fa-chevron-left" style="padding: 5px"></i>Retour</a>

    <a href="{{ path('mouvement_edit', {'id': mouvement.id}) }}" class="btn btn-primary" style="width:110px; height: 35px; color:white; text-decoration: none; font-size:12px;  position :relative; left:5px "><i class="fa fa-edit" style="padding: 5px"></i>Modifier</a>

    {{ include('mouvement/_delete_form.html.twig') }}
    
    <div class="affiche">
        <table class="table" style="width:35%;">
            <tbody>
                <tr>
                    <th>Date</th>
                    <td>{{ mouvement.mouvDate ? mouvement.mouvDate|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Type</th>
                    <td>{{ mouvement.mouvType ? 'Entr√©e' : 'Sortie' }}</td>
                </tr>
                <tr>
                    <th>Fournisseur</th>
                    <td>{{ mouvement.fournisseur }}</td>
                </tr>
                <tr>
                    <th>Quantite</th>
                    <td>{{ mouvement.mouvQuantite }}</td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
