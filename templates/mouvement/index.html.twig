{% extends 'base.html.twig' %}

{% block title %}Gestion de vente | Liste des mouvements{% endblock %}

{% block body %}
    <h3>Liste des mouvements</h3>
    <div style="width:90%">
        <table class="table" id="example">
            <thead>
                <tr class="text-center">
                    <th>Date</th>
                    <th>Produit</th>
                    <th>Type</th>
                    <th>Fournisseur</th>
                    <th>Quantite</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for mouvement in mouvements %}
                <tr class="text-center">
                    <td>{{ mouvement.mouvDate ? mouvement.mouvDate|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ mouvement.produit }}</td>
                    <td>{{ mouvement.mouvType ? 'Entrée' : 'Sortie' }}</td>
                    <td>{{ mouvement.fournisseur }}</td>
                    <td>{{ mouvement.mouvQuantite }}</td>
                    <td>
                        <a title="Détails" href="{{ path('mouvement_show', {'id': mouvement.id}) }}"><i class="fa fa-eye" style="padding: 5px"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr class="text-center">
                    <td colspan="5">Aucun enregistrement trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
{% block javascripts %}
       {{parent()}}
        <script>
            $(function() {
                
                $('#example').DataTable({
                    "language": {
                        "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/French.json"
                    }
                  });


                });

    </script>
{% endblock %}
