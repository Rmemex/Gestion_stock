{% extends 'base.html.twig' %}

{% block title %}Gestion de vente | Liste des catégories{% endblock %}

{% block body %}
    <h3>Liste des catégories</h3>
    <a class="btn btn-secondary" href="{{ path('categorie_new') }}" style="color:white; text-decoration: none; font-size:12px; width:115px; height: 32px; margin-bottom:10px;"><i class="fa fa-plus" style="padding: 5px"></i>Ajouter</a>
    <div style="width:90%">
        <table class="table" id="example" style="width:60%; margin:auto">
            <thead>
                <tr class="text-center">
                    <th>Id</th>
                    <th style="width:70%">Type</th>
                    <th style="width:5%">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for categorie in categories %}
                <tr class="text-center">
                    <td>{{ categorie.id }}</td>
                    <td>{{ categorie.catType }}</td>
                    <td>
                        <a title="Détails" style="width:30%" href="{{ path('categorie_show', {'id': categorie.id}) }}"><i class="fa fa-eye" style="padding: 5px"></i></a>
                        <a title="Modifier" href="{{ path('categorie_edit', {'id': categorie.id}) }}"><i class="fa fa-edit" style="padding: 5px"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr class="text-center">
                    <td colspan="3">Aucun enregistrement trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
{% block javascripts %}
       {{parent()}}
        <script>
            $(function() {
                
                $('#example').DataTable({
                    "language": {
                        "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/French.json"
                    }
                  });


                });

    </script>
{% endblock %}
