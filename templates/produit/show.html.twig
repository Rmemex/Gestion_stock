{% extends 'base.html.twig' %}

{% block title %}Gestion de vente | Produit{% endblock %}

{% block stylesheets %}<link rel="stylesheet" href="{{ asset('assets/css/affiche.css') }}">{% endblock %}

{% block body %}
    <h3>Produit</h3>
    <a href="{{ path('produit_index') }}" class="btn btn-secondary" style="width:115px; height: 35px; color:white; text-decoration: none; font-size:12px;"><i class="fa fa-chevron-left" style="padding: 5px"></i>Retour</a>

    <a href="{{ path('produit_edit', {'id': produit.id}) }}" class="btn btn-primary" style="width:110px; height: 35px; color:white; text-decoration: none; font-size:12px;  position :relative; left:5px "><i class="fa fa-edit" style="padding: 5px"></i>Modifier</a>

    {{ include('produit/_delete_form.html.twig') }}

    <div class="affiche">
        <table class="table" style="width:55%;">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ produit.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ produit.proNom }}</td>
                </tr>
                <tr>
                    <th>Prix</th>
                    <td>{{ produit.proPrix }}</td>
                </tr>
                <tr>
                    <th>Numéro de série</th>
                    <td>{{ produit.proSerial }}</td>
                </tr>
                <tr>
                    <th>Date de peremption</th>
                    <td>{{ produit.proDatePeremption ? produit.proDatePeremption|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Pro_status</th>
                    <td>{{ produit.proStatus ? 'Yes' : 'No' }}</td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
