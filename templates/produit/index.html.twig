{% extends 'base.html.twig' %}

{% block title %}Gestion de vente | Liste des produits{% endblock %}

{% block body %}
    <h3>Liste des produits</h3>
    <a class="btn btn-secondary" href="{{ path('produit_new') }}" style="color:white; text-decoration: none; font-size:12px; width:115px; height: 32px; margin-bottom:10px;"><i class="fa fa-plus" style="padding: 5px"></i>Ajouter</a>
    <div style="width:90%">
        <table class="table" id="example">
            <thead>
                <tr class="text-center">
                    <th>Id</th>
                    <th>Catégorie</th>
                    <th>Nom</th>
                    <th>Prix</th>
                    <th>Numéro de série</th>
                    <th>Quantité</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for produit in produits %}
                <tr class="text-center">
                    <td>{{ produit.id }}</td>
                    <td>{{ produit.categorie }}</td>
                    <td>{{ produit.proNom }}</td>
                    <td>{{ produit.proPrix }}</td>
                    <td>{{ produit.proSerial }}</td>
                    <td>{{ produit.proQuantite }}</td>
                    <td>{{ produit.proStatus ? 'Actif' : 'Rupture' }}</td>
                    <td>
                        <a title="Détails" href="{{ path('produit_show', {'id': produit.id}) }}"><i class="fa fa-eye" style="padding: 5px"></i></a>
                        <a title="Modifier" href="{{ path('produit_edit', {'id': produit.id}) }}"><i class="fa fa-edit" style="padding: 5px"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr class="text-center">
                    <td colspan="7">Aucun enregistrement trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
{% block javascripts %}
       {{parent()}}
        <script>
            $(function() {
                
                $('#example').DataTable({
                    "language": {
                        "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/French.json"
                    }
                  });


                });

    </script>
{% endblock %}
