{% extends 'base.html.twig' %}

{% block title %}Gestion de vente | Ajout image{% endblock %}

{% block body %}
    <h3>Ajout image</h3>
    <a href="{{ path('images_index') }}"  class="btn btn-secondary" style="width:115px; height: 35px;color:white; text-decoration: none; font-size:12px;"><i class="fa fa-chevron-left" style="padding: 5px"></i>Retour</a>
    {{ form_start(form) }}
        <button class="btn btn-success" style="position:relative; top:-35px; left:120px; font-size:12px;"><i class="fa fa-edit" style="padding: 5px"></i>{{ button_label|default('Enregistrer') }}</button>
        <div style="position:relative; top:-20px; width:40%; margin:auto">
            {{ form_widget(form) }}
        </div>
    {{ form_end(form) }}
{% endblock %}
