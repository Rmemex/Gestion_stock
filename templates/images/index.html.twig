{% extends 'base.html.twig' %}

{% block title %}Gestion de vente | Listes des images{% endblock %}

{% block body %}
    <h3>Liste des images</h3>
    <a class="btn btn-secondary" href="{{ path('images_new') }}" style="color:white; text-decoration: none; font-size:12px; width:115px; height: 32px; margin-bottom:10px;"><i class="fa fa-plus" style="padding: 5px"></i>Ajouter</a>
    <div style="width:90%">
        <table class="table" id="example">
            <thead>
                <tr class="text-center">
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for image in images %}
                <tr class="text-center">
                    <td>{{ image.id }}</td>
                    <td>{{ image.imgNom }}</td>
                    <td>
                        <a href="{{ path('images_show', {'id': image.id}) }}"><i class="fa fa-eye" style="padding: 5px"></i></a>
                        <a href="{{ path('images_edit', {'id': image.id}) }}"><i class="fa fa-edit" style="padding: 5px"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucun enregistrement trouv√©</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
{% block javascripts %}
       {{parent()}}
        <script>
            $(function() {
                
                $('#example').DataTable({
                    "language": {
                        "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/French.json"
                    }
                  });


                });

    </script>
{% endblock %}
