{% extends 'base.html.twig' %}

{% block title %}Gestion de vente | Liste des historiques{% endblock %}

{% block body %}
    <h3>Liste des historiques</h3>
    <a class="btn btn-secondary" href="{{ path('historique_new') }}" style="color:white; text-decoration: none; font-size:12px; width:115px; height: 32px; margin-bottom:10px;"><i class="fa fa-plus" style="padding: 5px"></i>Ajouter</a>
    <div style="width:90%">
        <table class="table" id="example">
            <thead>
                <tr class="text-center">
                    <th>Id</th>
                    <th>Reférence</th>
                    <th>Date</th>
                    <th>Type</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for historique in historiques %}
                <tr class="text-center">
                    <td>{{ historique.id }}</td>
                    <td>{{ historique.histoRefExterne }}</td>
                    <td>{{ historique.histoDate ? historique.histoDate|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ historique.histoType ? 'Connexion' : 'Déconnexion' }}</td>
                    <td>
                        <a title="Détails" href="{{ path('historique_show', {'id': historique.id}) }}"><i class="fa fa-eye" style="padding: 5px"></i></a>
                        <a title="Modifier" href="{{ path('historique_edit', {'id': historique.id}) }}"><i class="fa fa-edit" style="padding: 5px"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr class="text-center">
                    <td colspan="7">Aucun enregistrement trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
{% block javascripts %}
       {{parent()}}
        <script>
            $(function() {
                
                $('#example').DataTable({
                    "language": {
                        "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/French.json"
                    }
                  });


                });

    </script>
{% endblock %}
