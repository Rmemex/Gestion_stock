{% extends 'base.html.twig' %}

{% block title %}Gestion de vente | Liste des clients{% endblock %}

{% block body %}
    <h3>Liste des clients</h3>
    <a class="btn btn-secondary" href="{{ path('client_new') }}" style="color:white; text-decoration: none; font-size:12px; width:115px; height: 32px; margin-bottom:10px;"><i class="fa fa-plus" style="padding: 5px"></i>Ajouter</a>
    <div style="width:90%">
        <table class="table" id="example">
            <thead>
                <tr class="text-center">
                    <th>Id</th>
                    <th>Nom et prénom(s)</th>
                    <th>Contact</th>
                    <th>Adresse</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for client in clients %}
                <tr class="text-center">
                    <td>{{ client.id }}</td>
                    <td>{{ client.cliNom }}</td>
                    <td>{{ client.cliContact }}</td>
                    <td>{{ client.cliAdresse }}</td>
                    <td>{{ client.cliMail }}</td>
                    <td>
                        <a title="Détails" href="{{ path('client_show', {'id': client.id}) }}"><i class="fa fa-eye" style="padding: 5px"></i></a>
                        <a title="Modifier" href="{{ path('client_edit', {'id': client.id}) }}"><i class="fa fa-edit" style="padding: 5px"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr class="text-center">
                    <td colspan="8">Aucun enregistrement trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
{% block javascripts %}
       {{parent()}}
        <script>
            $(function() {
                
                $('#example').DataTable({
                    "language": {
                        "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/French.json"
                    }
                  });


                });

    </script>
{% endblock %}
